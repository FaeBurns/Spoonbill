<UserControl x:Class="Spoonbill.Wpf.Frontend.View.UserControls.LoadAwaitingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Spoonbill.Wpf.Frontend.View.UserControls"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <ContentControl x:Name="LoadedContentHost">
        <ContentControl.Style>
            <Style TargetType="ContentControl">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding StatusIndicator.Status, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:LoadAwaitingControl}}" Value="False">
                        <Setter Property="Content">
                            <Setter.Value>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <TextBlock Text="Loading..."/>
                                </Grid>
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ContentControl.Style>
    </ContentControl>
</UserControl>
